<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/telaInicio.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/solid.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200&display=swap" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <%- include('./partials/header') %>
    
        <section class=".bg-gradient-warning" id="header-tree">
            <nav class="navbar container navbar-expand-lg navbar-dark">
                <a href="#" class="navbar-brand nav-link active" id="a-houpa">Houpa!</a>
                <a href="#" class="navbar-brand"><i class="fas fa-angle-right" style="color: black;"></i></a>
                <a href="#" class="navbar-brand" id="a-vitrinis">Vitrines<i class="bi bi-cup"></i></a>
            </nav>
            <nav class="navbar container navbar-expand-lg navbar-dark">
                <a href="#" class="navbar-brand" id="a-houpa-b"><img src="../images/Caminho 4341.png" alt=""></a>
                <a href="#" class="navbar-brand" id="a-vitrinis-b">Vitrines<i class="bi bi-cup"></i></a>
            </nav>
        </section>

        <main class="container mt-4">
            <div class="d-flex justify-content-between">
                <h1 style="font-weight: bold;">Lista dos produtos cadastrados</h1>
                <form action="/users/search" class="d-flex justify-content-around align-items-center" method="get">
                    <input type="text" name="key" class="form-control" placeholder="Pesquise um produto">
                    <button type="submit" class="ml-3 btn btn-success">Buscar</button>
                </form>
            </div>
            <table class="table">
                <tr>
                    <thead style="color: blueviolet; box-shadow: 1px 1px 1px 1px;">
                        <th scope="col" >Id</th>
                        <th scope="col" >Nome</th>
                        <th scope="col" >Pre√ßo</th>
                    </thead>
                    <tbody style="color: blueviolet; box-shadow: 1px 2px 2px 1px;">
                        <% users.forEach(user => { %>
                        <tr>
                            <th scope="row"><%= user.id_produto%></th>
                            <th><%= user.nome %> </th>
                            <th><%= user.preco %> </th>
                            <th>
                                <a href="/users/ver/<%= user.id_produto%>" class="btn btn-primary">Ver Dados</a>
                                <a href="/users/editar/<%= user.id_produto%>" class="btn btn-warning">Editar Dados</a>
                                <a href="/users/delete/<%= user.id_produto%>" class="btn btn-danger">Deletar Produto</a>
                            
                            </th>
                        </tr>
                        <% }) %>
                    </tbody>
                </tr>            
            </table>
            <div id="voltarCadastro" class="d-flex justify-content-between">
                <a href="/users/cadastro"><button type="submit" style='font-size:24px'><i class="fa fa-address-card" aria-hidden="true"></i> Voltar a tela de cadastro </button></a>
            </div>
        </main>
</body>
</html>